<div style="height: 100%; display: flex; flex-direction: column;">

    <RadzenDataGrid AllowFiltering="true"
                    AllowColumnResize="true"
                    AllowSorting="true"
                    Data="@items"
                    TItem="DataItem"
                    Style="height: 100%;">
        <Columns>
            <RadzenDataGridColumn TItem="DataItem" Property="Id" Title="מזהה" Width="100px" />
            <RadzenDataGridColumn TItem="DataItem" Property="Name" Title="שם" />
            <RadzenDataGridColumn TItem="DataItem" Property="Description" Title="תיאור" />
            <RadzenDataGridColumn TItem="DataItem" Property="Date" Title="תאריך" FormatString="{0:dd/MM/yyyy}" />
            <RadzenDataGridColumn TItem="DataItem" Property="Status" Title="סטטוס" />
        </Columns>
    </RadzenDataGrid>
</div>

